<Window x:Class="KCK_APP.WPF.DeleteCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuń Samochód" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Podaj ID samochodu do usunięcia" HorizontalAlignment="Center" Margin="10"/>
            <TextBox Name="IdTextBox" Margin="5"/>
            <Button Content="Usuń" Click="DeleteCar_Click" Margin="10"/>
            <Button Content="Anuluj" Click="Cancel_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>