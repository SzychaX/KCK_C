<Window x:Class="KCK_APP.WPF.ManageCarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Zarządzanie Samochodami" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Zarządzanie Samochodami" FontSize="30" HorizontalAlignment="Center" Margin="20"/>
            <TextBox Name="CarIdTextBox" materialDesign:HintAssist.Hint="Podaj Id samochodu" Margin="10" />
            <Button Content="Dodaj samochód" Click="AddCar_Click" Margin="10" />
            <Button Content="Edytuj samochód" Click="EditCar_Click" Margin="10" />
            <Button Content="Usuń samochód" Click="DeleteCar_Click" Margin="10" />
            <Button Content="Powrót" Click="Back_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
