<Window x:Class="KCK_APP.WPF.SearchCarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Wyszukaj Samochody" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Wyszukaj Samochody" FontSize="30" HorizontalAlignment="Center" Margin="20"/>
            <TextBox Name="FilterTextBox" materialDesign:HintAssist.Hint="Filtruj po marce" Margin="5"/>
            <Button Content="Szukaj" Click="Search_Click" Margin="10"/>
            <ListView Name="CarsListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                        <GridViewColumn Header="Marka" DisplayMemberBinding="{Binding Make}" Width="100"/>
                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="100"/>
                        <GridViewColumn Header="Cena" DisplayMemberBinding="{Binding Price}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>

