<UserControl x:Class="KCK_APP.WPF.Views.DeleteCarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Usuń Samochód" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />
            <TextBlock Text="Podaj ID samochodu do usunięcia:" HorizontalAlignment="Center" Margin="10" />
            <TextBox x:Name="IdTextBox" materialDesign:HintAssist.Hint="ID Samochodu" Margin="10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Usuń" Width="100" Margin="5" Click="DeleteCar_Click" />
                <Button Content="Anuluj" Width="100" Margin="5" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>