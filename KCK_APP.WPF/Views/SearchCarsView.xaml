<UserControl x:Class="KCK_APP.WPF.Views.SearchCarsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
     <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Wyszukaj Samochody" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

            <!-- Kryteria filtrowania -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Pierwszy rząd filtrów -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="Marka" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MakeTextBox" Height="30" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Model" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="ModelTextBox" Height="30" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="5">
                    <TextBlock Text="Min. Rok" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MinYearTextBox" Height="30" />
                    <TextBlock x:Name="MinYearError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="5">
                    <TextBlock Text="Max. Rok" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MaxYearTextBox" Height="30" />
                    <TextBlock x:Name="MaxYearError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>

                <!-- Drugi rząd filtrów -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                    <TextBlock Text="Min. Cena (PLN)" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MinPriceTextBox" Height="30" />
                    <TextBlock x:Name="MinPriceError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBlock Text="Max. Cena (PLN)" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MaxPriceTextBox" Height="30" />
                    <TextBlock x:Name="MaxPriceError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
                    <TextBlock Text="Min. Przebieg (km)" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MinMileageTextBox" Height="30" />
                    <TextBlock x:Name="MinMileageError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="3" Margin="5">
                    <TextBlock Text="Max. Przebieg (km)" FontSize="14" Margin="0,0,0,5" />
                    <TextBox x:Name="MaxMileageTextBox" Height="30" />
                    <TextBlock x:Name="MaxMileageError" Foreground="Red" FontSize="12" Visibility="Collapsed" />
                </StackPanel>
            </Grid>

            <!-- Lista samochodów -->
            <ListView x:Name="CarsListView" Height="370" Width="1300" Margin="5" SelectionMode="Single"
                      SelectionChanged="CarsListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="200" />
                        <GridViewColumn Header="Marka" DisplayMemberBinding="{Binding Make}" Width="200" />
                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="200" />
                        <GridViewColumn Header="Rocznik" DisplayMemberBinding="{Binding Year}" Width="200" />
                        <GridViewColumn Header="Przebieg (km)" DisplayMemberBinding="{Binding Mileage}" Width="200" />
                        <GridViewColumn Header="Cena (PLN)" DisplayMemberBinding="{Binding Price}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Przycisk Filtruj -->
            <Button Content="Filtruj" Width="150" Margin="20" HorizontalAlignment="Center" Click="FilterCars_Click" />
        </StackPanel>
    </Grid>
</UserControl>